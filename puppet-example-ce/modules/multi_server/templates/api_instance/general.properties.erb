api.endpoint=<%= scope.lookupvar('multi_server::api_instance::install::host_protocol') %>://<%= scope.lookupvar('multi_server::api_instance::install::host_url') %>/api

che.user.workspaces.storage=/home/codenvy/codenvy-data/data/fs
vfs.local.fs_index_root_dir=${java.io.tmpdir}/fs-index
vfs.local.tmp_workspace_fs_root_dir=/home/codenvy/codenvy-data/data/tmp_fs

mailsender.application.server.url=http://localhost:8080/mail/
mail.configuration.path=/home/codenvy/codenvy-data/conf/email-connection.properties

#Should we cleanup database on sturtup. Used only for dev
#It have to be false on production.
dbcodenvy.clean_on_startup=<% if has_variable?('multi_server::api_instance::install::dbcodenvy_clean_on_startup') %><%= scope.lookupvar('multi_server::api_instance::install::dbcodenvy_clean_on_startup') %><% else %>false<% end %>

#Initial size of scheduler pool.
schedule.core_pool_size=10

# GIT
git.server.uri.prefix=git

user.self.creation.allowed=<%= scope.lookupvar('multi_server::api_instance::install::user_self_creation_allowed') %>

# Limits
limits.user.workspaces.count=<%= scope.lookupvar('multi_server::api_instance::install::limits_user_workspaces_count') %>
limits.user.workspaces.ram=<%= scope.lookupvar('multi_server::api_instance::install::limits_user_workspaces_ram') %>
limits.workspace.env.ram=<%= scope.lookupvar('multi_server::api_instance::install::limits_workspace_env_ram') %>

http.proxy=<%= scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy_workspaces') %>
https.proxy=<%= scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy_workspaces') %>
no_proxy=<%= scope.lookupvar('multi_server::api_instance::install::no_proxy_for_codenvy_workspaces') %>

# During the stop of the workspace automatically creates a snapshot if the value is {true},
# otherwise just stops the workspace.
workspace.runtime.auto_snapshot=false
# During the start of the workspace automatically restored it from a snapshot if the value is {true},
# otherwise just creates the new workspace.
workspace.runtime.auto_restore=false
