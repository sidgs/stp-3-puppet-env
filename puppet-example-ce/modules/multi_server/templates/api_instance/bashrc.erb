# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

unset CATALINA_PID JAVA_HOME JAVA_OPTS CODENVY_DATA_DIR CHE_LOCAL_CONF_DIR CATALINA_OPTS

JMX0="-Dcom.sun.management.jmxremote=true"
JMX1="-Djava.rmi.server.hostname=<%= scope.lookupvar('multi_server::api_instance::install::api_host_name') %>"
JMX2="-Dcom.sun.management.jmxremote.authenticate=true"
JMX3="-Dcom.sun.management.jmxremote.password.file=${HOME}/jmxremote.password"
JMX4="-Dcom.sun.management.jmxremote.access.file=${HOME}/jmxremote.access"
JMX5="-Dcom.sun.management.jmxremote.ssl=false"

CODENVY_DATA_DIR="/home/codenvy/codenvy-data"
CHE_LOGS_DIR="$CODENVY_DATA_DIR/logs/api/"
CHE_LOCAL_CONF_DIR="$CODENVY_DATA_DIR/conf/"

JAVA_HOME="/usr/local/jdk"

PATH=${JAVA_HOME}/bin:${JAVA_HOME}/jre/bin:$PATH:$HOME/bin:$HOME/.local/bin

CATALINA_PID="${HOME}/${USER}.pid"
CATALINA_OPTS="$JMX0 $JMX1 $JMX2 $JMX3 $JMX4 $JMX5 -Dche.local.conf.dir=$CHE_LOCAL_CONF_DIR"

<% if ! scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy').empty? or ! scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy').empty? -%>
JAVA_HTTP_PROXY_SET="-Dhttp.proxySet=true"
<% end -%>
<% if ! scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy').empty? -%>
JAVA_HTTP_PROXY_HOST="-Dhttp.proxyHost=<%= scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy').gsub(/^https?\:\/\//, '').gsub(/^www./,'').split(':')[0] %>"
JAVA_HTTP_PROXY_PORT="-Dhttp.proxyPort=<%= scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy').gsub(/^https?\:\/\//, '').gsub(/^www./,'').split(':')[1] %>"
<% end -%>
<% if ! scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy').empty? -%>
JAVA_HTTPS_PROXY_HOST="-Dhttps.proxyHost=<%= scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy').gsub(/^https?\:\/\//, '').gsub(/^www./,'').split(':')[0] %>"
JAVA_HTTPS_PROXY_PORT="-Dhttps.proxyPort=<%= scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy').gsub(/^https?\:\/\//, '').gsub(/^www./,'').split(':')[1] %>"
<% end -%>
<% if ! scope.lookupvar('multi_server::api_instance::install::no_proxy_for_codenvy').empty? -%>
JAVA_NO_PROXY="-Dhttp.nonProxyHosts='<%= scope.lookupvar('multi_server::api_instance::install::no_proxy_for_codenvy').gsub(/^https?\:\/\//, '').gsub(/^www./,'').split(':')[0] %>'"
<% end -%>

JAVA_OPTS="-Xms512m -Xmx<%= scope.lookupvar('multi_server::api_instance::configs::xmx') %>m -server -XX:+HeapDumpOnOutOfMemoryError -XX:+UseConcMarkSweepGC -XX:+CMSParallelRemarkEnabled -XX:+UseCMSInitiatingOccupancyOnly -XX:+ScavengeBeforeFullGC -XX:+CMSScavengeBeforeRemark <% if ! scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy').empty? or ! scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy').empty? -%>$JAVA_HTTP_PROXY_SET<% end -%> <% if ! scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy').empty? -%>$JAVA_HTTP_PROXY_HOST $JAVA_HTTP_PROXY_PORT<% end -%> <% if ! scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy').empty? -%>$JAVA_HTTPS_PROXY_HOST $JAVA_HTTPS_PROXY_PORT<% end -%><%- if ! scope.lookupvar('multi_server::api_instance::install::no_proxy_for_codenvy').empty? -%> $JAVA_NO_PROXY<% end -%>"

export PATH JAVA_HOME JAVA_OPTS CATALINA_PID PATH CATALINA_OPTS CHE_LOCAL_CONF_DIR CHE_LOGS_DIR
<% if ! scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy').empty? -%>
export http_proxy="<%= scope.lookupvar('multi_server::api_instance::install::http_proxy_for_codenvy') %>"
<% end -%>
<% if ! scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy').empty? -%>
export https_proxy="<%= scope.lookupvar('multi_server::api_instance::install::https_proxy_for_codenvy') %>"
<% end -%>
<% if ! scope.lookupvar('multi_server::api_instance::install::no_proxy_for_codenvy').empty? -%>
export no_proxy="<%= scope.lookupvar('multi_server::api_instance::install::no_proxy_for_codenvy') %>"
<% end -%>
