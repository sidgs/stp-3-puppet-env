<included>
    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost><%= scope.lookupvar('multi_server::site_instance::install::syslog_host') %></syslogHost>
       <port><%= scope.lookupvar('multi_server::site_instance::install::syslog_port') %></port>
       <facility>user</facility>
       <suffixPattern>%-41(%date[%.15thread]) %-45([%-5level] [%.30logger{30} %L]) - %msg%n</suffixPattern>
    </appender>
<appender name="email" class="ch.qos.logback.classic.net.SMTPAppender">
   <SMTPHost>localhost</SMTPHost>
   <SMTPPort>25</SMTPPort>
   <SSL>false</SSL>
        <to><%= scope.lookupvar('multi_server::site_instance::install::email_to') %></to>
        <from><%= scope.lookupvar('multi_server::site_instance::install::email_from') %></from>
   <subject>Site <%= scope.lookupvar('multi_server::site_instance::install::email_subject') %></subject>
   <layout class="ch.qos.logback.classic.PatternLayout">
      <pattern>%-41(%date[%.15thread]) %-45([%-5level] [%.30logger{30} %L]) - %msg%n</pattern>
   </layout>
    <CyclicBufferTracker class="ch.qos.logback.core.spi.CyclicBufferTracker">
      <BufferSize>5</BufferSize>
    </CyclicBufferTracker>
</appender>

<root>
<appender-ref ref="SYSLOG"/>
<appender-ref ref="email"/>
</root>

</included>
